procedure kTask.init(_name: String; _area: kTaskArea; _skill, _minLevel, _maxLevel: Integer;
                     _monster: kMonster; _tree: kTree; _ore: kOre; _wisp: kWisp; _bank: kBank);
begin
  self.name := _name;
  self.area := _area;
  self.skill := _skill;
  self.minLevel := _minLevel;
  self.maxLevel := _maxLevel;
  self.monster := _monster;
  self.tree := _tree;
  self.ore := _ore;
  self.wisp := _wisp;
  self.bank := _bank;
end;

